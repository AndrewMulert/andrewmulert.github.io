<article>
    <% if (about && about.length > 0) { %>
        <% about.forEach((about, index) => { %>
            <%
                let cardClasses = 'row row_home';

                if (about.order) {
                    cardClasses += ` md-grid-${about.order.position} lg-grid-${about.order.position}`;
                }
            %>
            <div class="<%= cardClasses %>" id="card<%= index + 1 %>">
                <h2 class="row_header"><%= about.title %></h2>
                <picture>
                    <source srcset="<%= about.image.smallSrc %>" media="(max-width: 500px)">
                    <source srcset="<%= about.image.mediumSrc %>" media="(max-width: 1000px)">
                    <img class="row_image_<%= about.image.orientation %>" src="<%= about.image.minSrc %>" alt="<%= about.image.alt %>" loading="lazy">
                </picture>
                <h3 class="row_header"><%= about.timeStamp %></h3>
                <p><%= about.description %></p>
                <% if (about.button && about.button.length > 0) { %>
                    <% about.button.forEach(btn => { %>
                    <a href="<%= btn.href %>" target="_blank" class="row_button" <% if (btn.id) { %> id="<%= btn.id %>"<% } %>><%= btn.text %></a>
                    <% }) %>
                <% } %>
            </div>
        <% }) %>
    <% } else { %>
        <p>Plot Twist! Either I'm just boring, or the database broke</p>
    <% } %>
</article>
